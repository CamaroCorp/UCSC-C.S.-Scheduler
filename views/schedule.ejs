<%- include("header")-%>
<!-- The main grid -->
<div class="main-grid">

  <div class=""></div>
  <div class="season">Fall</div>
  <div class="season">Winter</div>
  <div class="season">Spring</div>
  <div class="season">Summer</div>

  <% let quarterCount=0;%>
  <% for(var i=0; i<Math.floor(usersCourses.length/4); i++){ %>
    <div class="year"><%= usersCourses[quarterCount].year %></div>
    <% for(var x=0; x<4; x++){ %>
      <form class="quarter" action="/" method="post">
        <button name="name" value=<%=quarterCount%>>
          <!--EJS variable array "usersCourses" supplied by server app.js-->
            <% for(var c=0; c<usersCourses[quarterCount].courses.length; c++){ %>
              <%= usersCourses[quarterCount].courses[c] %> <br>
        <% } %>
        </button>
      </form>
      <% quarterCount++;%>
    <% } %>
  <% } %>
</div>
<div class="add-remove-div">
  <form action="/" method="post">
    <button class="add-year" name="addYear" value=<%=quarterCount/4%>>Add Year</button>
  </form>
  <form action="/" method="post">
    <button class="remove-year" name="removeYear" value=<%=quarterCount%>>Remove Year</button>
  </form>
</div>
<script src="index.js" charset="utf-8"></script>
<%- include("footer")-%>
